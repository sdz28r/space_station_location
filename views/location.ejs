<% include partials/header %>

<div class="jumbotron">
<div class="container">
<h1>MAP</h1>
<li>Latitude: <%= ddata["iss_position"]["latitude"] %></li>
<li>Longitude: <%= ddata["iss_position"]["longitude"] %></li>
<br>
<form action="/details">
    <button class="btn-primary btn-lg">MEMBER_DETAILS</button>
</form>
</div>
</div>
<div id = "map"></div>
<script>
    var map = L.map('map').setView([0,0],2); 
    L.tileLayer('https://maps.tilehosting.com/styles/streets/{z}/{x}/{y}.png?key=IzkUrAb0DQL4Gp0Ne6r3' ,{ 
        attribution: '<a href="https://www.maptiler.com/copyright/" target="_blank">© MapTiler</a><a href="https://www.openstreetmap.org/copyright" target="_blank">© OpenStreetMap contributors</a>'
    }).addTo(map); 
    var marker = L.marker([<%= ddata["iss_position"]["latitude"] %>,<%= ddata["iss_position"]["longitude"] %>]).addTo(map)
        .bindPopup('ISS_location')
    	.openPopup();
</script>

